{% extends 'base.html.twig' %}

    {% block body %}

        <h1 class="main-information">Rendez-vous</h1>

        <h2 class="sub-information">Listing</h2>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Entreprise</th>
                    <th scope="col">Poste</th>
                    <th scope="col">Date</th>
                    <th scope="col">Lieu</th>
                    <th scope="col">Report√©</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in appointments %}
                <tr>
                    <th>{{ appointment.id }}</th>
                    <th>{{ appointment.application.company.name }}</th>
                    <th>{{ appointment.application.job.position }}</th>
                    <th>{{ appointment.dateStart|date }}</th>
                    <th>{{ appointment.location }}</th>
                    <th>{{ appointment.postpone }}</th>
                    <th><a href="{{ path('show_appointment',{'id' : appointment.id}) }}">Plus d'info</a></th>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% endblock %}