{% extends 'base.html.twig' %}

    {% block body %}

        <h1 class="main-information">Candidatures</h1>

        <h2 class="sub-information">Listing</h2>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Poste</th>
                <th scope="col">Candidature du</th>
                <th scope="col">Statut</th>
                <th scope="col">Info</th>
            </tr>
            </thead>
            <tbody>
            {% for application in applications %}
                <tr>
                    <th>{{ application.id }}</th>
                    <th>{{ application.company.name }}</th>
                    <th>{{ application.job.position }}</th>
                    <th>{{ application.appliedOn|date }}</th>
                    <th>{{ application.status }}</th>
                    <th><a href="{{ path('show_application', {'id' : application.id}) }}">Plus d'info</a></th>
                </tr>
            {% endfor %}
            </tbody>

        </table>

    {% endblock %}